<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMenuLateral"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBemVindo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="Bem Vindo" />

            <Button
                android:id="@+id/buttonFuncao1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="57dp"
                android:background="@drawable/button_style"
                android:text="Função 1"
                android:textColor="@android:color/background_light" />
            <Button
                android:id="@+id/buttonFuncao2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/buttonFuncao1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_style"
                android:text="Função 2"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/buttonFuncao3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/buttonFuncao1"
                android:layout_marginEnd="21dp"
                android:background="@drawable/button_style"
                android:text="Função 3"
                android:textColor="@android:color/background_light" />


            <ImageButton
                android:id="@+id/FloatButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignEnd="@+id/buttonFuncao3"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right|end"
                android:layout_marginBottom="21dp"
                android:background="@drawable/oval"
                android:elevation="10dp"
                android:focusableInTouchMode="false"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_white" />
        </RelativeLayout>
    </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menu_lateral"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_lateral_cabecalho"
        app:menu="@menu/menu_lateral">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>